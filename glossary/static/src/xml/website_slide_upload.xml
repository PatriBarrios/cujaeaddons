<?xml version="1.0" encoding="UTF-8"?>
<templates >
            
    <t t-name="website.slide.upload.modal.glossary">
        <div>
            <form class="clearfix">
                <div class="row">
                    <div id="o_wslides_js_slide_upload_left_column" class="col-md-6">
                        <div class="mb-3">
                            <label for="glossary_id" class="col-form-label">Glossary</label>
                            <input class="form-control" id="glossary_id" required="required"/>
                            <span class="o_error_no_certification text-danger d-none">Select a glossary</span>
                        </div>
                        <t t-call="website.slide.upload.modal.common"/>
                        <canvas id="data_canvas" class="d-none"></canvas>
                    </div>
 
                    <div id="o_wslides_js_slide_upload_preview_column" class="col-md-6">
                        <div class="img-thumbnail h-100">
                            <div class="o_slide_tutorial p-3">
                                <div class="h5">How to upload a glossary</div>
                                <div class="my-4">You can create your glossary from here, to edit configure it in the backend</div>
                            </div>
                        </div>
                    </div>        
                </div>  
            </form>
        </div>
    </t>
</templates>
