        <xpath expr="//li[@t-att-data-id='slide.id']" position="attributes">
            <attribute name="t-att-data-glossary-id">slide.glossary_id.id</attribute>
            <attribute name="t-att-data-glossary-id">slide.glossary_id.term_ids</attribute>
            <attribute name="t-att-data-is-member">slide.channel_id.is_member</attribute>
